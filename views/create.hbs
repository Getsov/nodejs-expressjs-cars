<h1>Create</h1>
<div class="form">
  <form action="/create" method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{car.name}}" />
    <label for="name">Description</label>
    <textarea id="name" name="description">{{car.description}}</textarea>
    <label for="image">ImageUrl</label>
    <input type="text" id="image" name="imageUrl" value="{{car.imageUrl}}" />
    <label for="price">Price</label>
    <input id="price" name="price" type="number" value="{{car.price}}" />
    <input type="submit" value="Publish" />
  </form>
</div>